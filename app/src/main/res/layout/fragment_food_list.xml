<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >
    <de.struckmeierfliesen.ds.micromanagement.EmptyRecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:name="de.struckmeierfliesen.ds.micromanagement.FoodFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="de.struckmeierfliesen.ds.micromanagement.FoodFragment"
        tools:listitem="@layout/fragment_food" />

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:text="@string/no_entries"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:visibility="gone"
        android:gravity="center_horizontal" />
        <!--android:background="@drawable/whiter_element_divider"-->
</FrameLayout>
